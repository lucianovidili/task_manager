@model TaskManagerApp.Models.TaskItem

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Task
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this task? This action cannot be undone.
                </div>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@Model.Title</h5>
                        <p class="card-text text-muted">@Model.Description</p>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    <strong>Due Date:</strong> @(Model.DueDate?.ToShortDateString() ?? "No due date")
                                </small>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="bi bi-check-circle me-1"></i>
                                    <strong>Status:</strong> 
                                    <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-warning")">
                                        @(Model.IsCompleted ? "Completed" : "Pending")
                                    </span>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Task
                        </button>
                        <a href="/Tasks" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>