@model IEnumerable<TaskManagerApp.Models.TaskItem>

<div class="row mb-4">
    <div class="col">
        <h2 class="text-primary mb-3">
            <i class="bi bi-list-task me-2"></i>My Tasks
        </h2>
    </div>
    <div class="col-auto">
        <a href="/Tasks/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Task
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h3 class="text-muted mt-3">No tasks yet</h3>
        <p class="text-muted">Create your first task to get started!</p>
        <a href="/Tasks/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create Task
        </a>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm @(item.IsCompleted ? "border-success" : "border-warning")">
                    <div class="card-header d-flex justify-content-between align-items-center @(item.IsCompleted ? "bg-success text-white" : "bg-warning text-dark")">
                        <h6 class="mb-0 fw-bold">@item.Title</h6>
                        <span class="badge @(item.IsCompleted ? "bg-light text-success" : "bg-light text-dark")">
                            @(item.IsCompleted ? "Completed" : "Pending")
                        </span>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar-event me-1"></i>
                                @(item.DueDate?.ToShortDateString() ?? "No due date")
                            </small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a href="/Tasks/Edit/@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                            <a href="/Tasks/Delete/@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}